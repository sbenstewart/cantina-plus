{
  "manifest_version": 2,

  "name": "Content Script",
  "description": "Sends the URLs and page details to the background.",
  "version": "1.0",

  "browser_action": {
    "default_popup": "popup.html"
  },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "tabs",
    "<all_urls>"
  ]
}
